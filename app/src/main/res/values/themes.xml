<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Theme -->
    <style name="Theme.StatusSaver" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_variant</item>
        <item name="colorSecondary">@color/green_secondary</item>
        <item name="android:colorBackground">@color/green_background</item>
        <item name="colorSurface">@color/green_surface</item>
        <item name="colorOnPrimary">@color/green_on_primary</item>
        <item name="colorOnSecondary">@color/green_on_secondary</item>
        <item name="colorOnBackground">@color/green_on_background</item>
        <item name="colorOnSurface">@color/green_on_surface</item>
        <item name="android:statusBarColor">@color/green_status_bar</item>
        <item name="android:navigationBarColor">@color/green_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- WhatsApp Green Theme (Light) -->
    <style name="Theme.StatusSaver.Green" parent="Theme.StatusSaver">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_variant</item>
        <item name="colorSecondary">@color/green_secondary</item>
        <item name="android:colorBackground">@color/green_background</item>
        <item name="colorSurface">@color/green_surface</item>
        <item name="colorOnPrimary">@color/green_on_primary</item>
        <item name="colorOnSecondary">@color/green_on_secondary</item>
        <item name="colorOnBackground">@color/green_on_background</item>
        <item name="colorOnSurface">@color/green_on_surface</item>
        <item name="android:statusBarColor">@color/green_status_bar</item>
        <item name="android:navigationBarColor">@color/green_primary</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.StatusSaver.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_variant</item>
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnPrimary">@color/dark_on_primary</item>
        <item name="colorOnSecondary">@color/dark_on_secondary</item>
        <item name="colorOnBackground">@color/dark_on_background</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
        <item name="android:statusBarColor">@color/dark_status_bar</item>
        <item name="android:navigationBarColor">@color/dark_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Fullscreen Theme -->
    <style name="Theme.StatusSaver.FullScreen" parent="Theme.StatusSaver.Dark">
        <item name="android:windowFullscreen">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.StatusSaver.Dialog" parent="Theme.Material3.Light.Dialog">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorSecondary">@color/green_secondary</item>
    </style>
</resources>
