<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/statusCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:strokeWidth="0dp"
    app:strokeColor="@color/app_green">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Status Thumbnail -->
        <ImageView
            android:id="@+id/statusImage"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:contentDescription="Status thumbnail" />

        <!-- Gradient Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_bottom" />

        <!-- Selection Overlay (shown when item is selected) -->
        <View
            android:id="@+id/selectionOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3000AA00"
            android:visibility="gone" />

        <!-- Video Play Indicator -->
        <ImageView
            android:id="@+id/videoIndicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_circle"
            android:visibility="gone"
            android:contentDescription="Video indicator" />

        <!-- Selection Checkmark (top-right, shown in selection mode) -->
        <ImageView
            android:id="@+id/selectionCheckMark"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="end|top"
            android:layout_margin="8dp"
            android:src="@drawable/ic_circle_outline"
            android:visibility="gone"
            android:contentDescription="Selection indicator" />

        <!-- Cache Info Overlay -->
        <LinearLayout
            android:id="@+id/cacheInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingStart="6dp"
            android:paddingEnd="48dp"
            android:paddingBottom="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtCacheDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <TextView
                android:id="@+id/txtExpiryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:alpha="0.8"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

        </LinearLayout>

        <!-- Action Button Container -->
        <FrameLayout
            android:id="@+id/downloadContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="6dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Download Button - Mini FAB -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_download"
                android:scaleType="center"
                android:contentDescription="Download"
                app:fabSize="mini"
                app:fabCustomSize="36dp"
                app:maxImageSize="18dp"
                app:elevation="2dp"
                app:backgroundTint="@color/app_green"
                app:tint="@android:color/white" />

            <!-- Share Button - Mini FAB (for Saved tab) -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                android:scaleType="center"
                android:contentDescription="Share"
                android:visibility="gone"
                app:fabSize="mini"
                app:fabCustomSize="36dp"
                app:maxImageSize="18dp"
                app:elevation="2dp"
                app:backgroundTint="@color/app_green"
                app:tint="@android:color/white" />

            <!-- Double Checkmark (Saved Indicator for non-saved tabs) -->
            <ImageView
                android:id="@+id/checkMark"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_double_check"
                android:padding="8dp"
                android:background="@drawable/circle_bg_saved"
                android:contentDescription="Saved"
                android:visibility="gone" />

        </FrameLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
